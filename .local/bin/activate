#!/usr/bin/env bash
if [[ $1 == odoo* ]];
then
    # ${1:4} removes 'odoo' from odoo12 leaving just the number
    if [ -z "$2" ]
    then
	echo "Specify odoo config file i.e. odoorc.conf"
	return
    fi
    export ODOO_CONFIG_FILE=$2
    export ODOO_VERSION_DIR=$HOME"/Work/${1:4}"
fi
. $HOME/.venv/$1/bin/activate
